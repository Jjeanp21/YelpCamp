<!--To pass this layout to our boilerplate template in layouts folder.
Will be inserted in body of boilerplate. -->
<%layout('layouts/boilerplate')%>

  <!--For star style sheet. For star rating under Review.-->
  <!--Should have link in head element, that is in the boilerplate file, but for this will leave in show file.-->
  <link rel="stylesheet" href="/stylesheets/stars.css">

  <div class="row">
    <div class="col-6">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <% cground.images.forEach((img, i)=> {%>
            <div class="carousel-item <%=i === 0 ? 'active': ''%>">
              <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100" alt=" ">
            </div>
            <% }) %>
        </div>
        <% if (cground.images.length > 1 ){ %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>


      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">
            <%= cground.title %>
          </h5>
          <p class="card-text">
            <%= cground.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">Location: <%= cground.location %>
          </li>
          <li class="list-group-item">Submitted by <%= cground.author.username %>
          </li>
          <li class="list-group-item">$<%= cground.price %>/night</li>
        </ul>
        <% if(currentUser && cground.author.equals(currentUser._id)){ %>
          <div class="card-body">
            <a class="btn btn-outline-warning mb-3" href="/campgrounds/<%=cground._id%>/edit">Edit</a>
            <form class="d-inline" action="/campgrounds/<%= cground._id %>?_method=DELETE" method="POST">
              <button class="btn btn-outline-danger mb-3">Delete</button>
            </form>
          </div>
          <% } %>
            <div class="card-footer text-body-secondary">
              2 days ago
            </div>
      </div>
    </div>

    <!--Review side of page-->
    <div class="col-6">
      <div id="map"></div>
      <% if(currentUser){ %>
        <h2>Leave a Review</h2>
        <!--Got this form from github. Starability-->
        <form action="/campgrounds/<%=cground._id%>/reviews" class="mb-3 validated-form" method="POST" novalidate>
          <div class="div mb-3">
            <fieldset class="starability-basic">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div class="div mb-3">
            <label class="form-label" for="body">Review</label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
            <div class="valid-feedback">Looks Good</div>
          </div>
          <button class="btn btn-outline-success">Submit</button>
        </form>
        <% } %>

          <%for(let review of cground.reviews){%>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title text-muted">
                  <%= review.author.username %>
                </h5>
                <p class="starability-result" data-rating="<%= review.rating %>">
                  Rated: <%= review.rating %> stars
                </p>
                <!-- <h6 class="card-subtitle mb-2 text-muted"> By <%=review.author.username %> -->
                </h6>
                <p class="card-text">
                  Review: <%= review.body %>
                </p>
                <% if(currentUser && review.author.equals(currentUser._id)){ %>
                  <form action="/campgrounds/<%= cground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                  <% } %>
              </div>
            </div>
            <% } %>
    </div>
  </div>

  <script>
    const maptilerApiKey = '<%-process.env.MAPTILER_API_KEY %>';
    const campground = <%- JSON.stringify(cground) %>
  </script>

<!--Access script from showPage file-->
  <script src="/javascripts/showPageMap.js"></script>